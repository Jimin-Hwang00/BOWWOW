<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInfoFragment">

    <Button
        android:id="@+id/updateInfoBt"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginTop="516dp"
        android:text="내 정보 수정"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bowwow_logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="66dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_base" />

    <TextView
        android:id="@+id/uNameText"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:text="김땡땡 님의 정보"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bellInfoText"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="368dp"
        android:text="설정된 벨 :"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uNameInfoText"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="196dp"
        android:text="반려인 이름:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dogNameInfoText"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="308dp"
        android:text="반려견 이름:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceInfoText"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="252dp"
        android:text="설정된 장치:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetBt"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginTop="608dp"
        android:backgroundTint="#FF4040"
        android:text="계정 삭제"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>