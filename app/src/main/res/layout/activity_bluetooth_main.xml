<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothMainActivity">
    <ImageView android:layout_height="156dp"
        android:layout_width="156dp"
        app:srcCompat="@drawable/bowwow_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp" android:layout_marginStart="124dp"
        android:id="@+id/logo"/>

    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <Button android:layout_height="45dp"
        android:layout_width="159dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="204dp"
        android:layout_marginStart="120dp"
        android:id="@+id/bellConnect"
        android:textStyle="bold" android:textSize="18sp"
        android:text="내 장치 보기" android:background="@drawable/circle"/>

    <ImageView android:layout_height="19dp"
        android:layout_width="29dp"
        app:srcCompat="@drawable/footprint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="284dp"
        android:layout_marginStart="1dp"
        android:id="@+id/imageView2"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="284dp"
        android:layout_marginStart="28dp"
        android:id="@+id/text1"
        android:textStyle="bold"
        android:text="나의 기기"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_height="418dp" android:layout_width="417dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="316dp" android:id="@+id/recyclerView"/>
</androidx.constraintlayout.widget.ConstraintLayout>